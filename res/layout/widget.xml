<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center" 
    android:background="@drawable/camerawidget">

    
   <!--  <ImageView
        android:id="@+id/photo_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photo_widget"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/video_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/video_widget" 
        android:layout_weight="1"/>
 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp">
       <ImageView
        android:id="@+id/photo_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photo_widget"
        android:layout_weight="6" />
        <TextView
        android:id="@+id/photo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_widget_photo"
        android:layout_weight="1" 
        android:textSize="10sp"/>
    </LinearLayout>
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
         android:layout_marginBottom="8dp">
       <ImageView
        android:id="@+id/video_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/video_widget"
        android:layout_weight="6" />
        <TextView
        android:id="@+id/video_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_widget_video"
        android:textSize="10sp"
        android:layout_weight="1" />
    </LinearLayout> 
</LinearLayout>
